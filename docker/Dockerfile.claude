# Para base image with Claude pre-installed
FROM ubuntu:22.04

# Avoid prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies including network security tools
RUN apt-get update && apt-get install -y \
    curl \
    git \
    sudo \
    ca-certificates \
    iptables \
    ipset \
    dnsutils \
    iproute2 \
    aggregate \
    jq \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 20.x (required for Claude)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt-get install -y nodejs && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Install Claude Code CLI globally via npm
RUN npm install -g @anthropic-ai/claude-code

# Create a non-root user 'para' for security
RUN useradd -m -s /bin/bash para && \
    echo "para ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Create workspace directory
RUN mkdir -p /workspace && \
    chown -R para:para /workspace

# Copy security and entrypoint scripts
COPY init-firewall.sh /usr/local/bin/init-firewall.sh
COPY secure-entrypoint.sh /usr/local/bin/secure-entrypoint.sh
COPY claude-entrypoint.sh /usr/local/bin/claude-entrypoint.sh
COPY para-shim.sh /usr/local/bin/para
RUN chmod +x /usr/local/bin/init-firewall.sh && \
    chmod +x /usr/local/bin/secure-entrypoint.sh && \
    chmod +x /usr/local/bin/claude-entrypoint.sh && \
    chmod +x /usr/local/bin/para

# Switch to non-root user
USER para
WORKDIR /workspace

# Verify Claude is installed
RUN claude --version || echo "Claude CLI installed"

# Add security labels for feature detection
LABEL para.version="1.2.0" \
      para.network-isolation="true" \
      para.secure-entrypoint="true" \
      para.build-date="${BUILD_DATE}" \
      para.description="Para authenticated container with network isolation support"

# Set the secure entrypoint to handle network isolation and authentication
ENTRYPOINT ["/usr/local/bin/secure-entrypoint.sh"]

# Default command
CMD ["/bin/bash"]