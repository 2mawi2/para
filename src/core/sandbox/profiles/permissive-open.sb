(version 1)

;; Para Sandboxing Profile - Permissive Open
;; Allows everything by default, only restricts file writes

;; Allow everything by default
(allow default)

;; Deny all file writes EXCEPT under specific paths
(deny file-write*)
(allow file-write*
    (subpath (param "TARGET_DIR"))
    (subpath (param "TMP_DIR"))
    (subpath (param "CACHE_DIR"))
    (subpath (string-append (param "HOME_DIR") "/.para"))
    (subpath (string-append (param "HOME_DIR") "/.cargo"))
    (subpath (string-append (param "HOME_DIR") "/.rustup"))
    (subpath (string-append (param "HOME_DIR") "/.claude"))
    (literal (string-append (param "HOME_DIR") "/.claude.json"))
    (literal "/dev/stdout")
    (literal "/dev/stderr")
    (literal "/dev/null")
)